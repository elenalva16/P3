<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>Ejercicio2_p3</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>

  <context-param>
    <param-name>url</param-name>
    <param-value>http://www.uco.es</param-value>
  </context-param>

  <env-entry>
    <env-entry-name>controlador</env-entry-name>
       <env-entry-type>java.lang.String</env-entry-type>
    <env-entry-value>com.mysql.jdbc.Driver</env-entry-value>
  </env-entry>

  <env-entry>
    <env-entry-name>url_conex</env-entry-name>
       <env-entry-type>java.lang.String</env-entry-type>
    <env-entry-value>jdbc:mysql://oraclepr.uco.es:3306/i82gatom</env-entry-value>
  </env-entry>

  <env-entry>
    <env-entry-name>usuario</env-entry-name>
       <env-entry-type>java.lang.String</env-entry-type>
    <env-entry-value>i82gatom</env-entry-value>
  </env-entry>

  <env-entry>
    <env-entry-name>clave</env-entry-name>
       <env-entry-type>java.lang.String</env-entry-type>
    <env-entry-value>practica</env-entry-value>
  </env-entry>

	<context-param>
		<param-name>fichero</param-name>
		<param-value>/WEB-INF/sql.properties</param-value>  
	</context-param>
	
</web-app>